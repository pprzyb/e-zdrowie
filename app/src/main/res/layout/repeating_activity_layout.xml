<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:background="@mipmap/heart_background">


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:scaleType="matrix"
            app:srcCompat="@drawable/transparent_background_" />

        <TextView
                    android:id="@+id/textView_dane1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="50dp"
                    android:text="Nie zapomnij wziąć swoich leków!"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />


        <TextView
            android:id="@+id/textView_opis1"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_dane1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="Pamiętaj, że systematyczne zażywanie leków jest bardzo ważne. Powinno przestrzegać się zarówno zalecanych dawek jak i pór przyjmowania."
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#FFFFFF"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignEnd="@+id/imageView1"
            android:layout_below="@+id/textView_opis1"
            android:layout_marginEnd="9dp"
            app:srcCompat="@drawable/ic_pill_white" />


    </RelativeLayout>
</LinearLayout>